        "@gitblit-jar//:jar",
        "@groovy//jar",
        "@httpcore//jar:neverlink",
        "@ivy//jar",
        "@jdom//jar",
        "@libpam4j//jar",
        "@lucene-core//jar:neverlink",
        "@lucene-highlighter//jar",
        "@lucene-memory//jar",
